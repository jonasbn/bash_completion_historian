#
#  Completion for historian:
#
#  hist complete
#  hist config
#  hist count
#  hist import
#  hist search
#  hist shell
#  hist version

_fetch_entries () {
    local IFS=' '
    local cur=$1
    local i=0

    echo "searching for $cur"

    local entries=$( hist complete "${cur}" )

    for entry in "${entries[@]}";
        do words=($entry)
        echo "Entry = $entry"
    done

    COMPREPLY=( $(compgen -W "${words+1}" -- ${cur}) )
}

_hist()
{
    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"

    #
    #  The basic options we can complete
    #
    opts="config count import shell search version"

    if [[ "${prev}" == "complete" ]] ; then
        #COMPREPLY=$( hist complete "${cur}" )
        _fetch_entries $cur
        return 0
    fi

    COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
}

complete -F _hist hist
